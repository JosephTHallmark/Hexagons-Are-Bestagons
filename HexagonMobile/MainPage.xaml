<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HexagonMobile.MainPage">

    <ScrollView x:Name="scrollView">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            x:Name="MainContent">

            <VerticalStackLayout
                x:Name="VSL1">
                <Label
                    Text="Welcome "
                    FontSize="18"
                    HorizontalOptions="Start" />
                <Button
                    x:Name="SubmitBtn"
                    Text="Submit"
                    Clicked="Submit"
                    HorizontalOptions="End"/>
                <Entry Placeholder="First Text Box (1,1)0101"
                   x:Name="FirstHexInput"
                       Keyboard="Default"/>
                <Entry Placeholder="Second Text Box (1,1)1517"
                   x:Name="SecondHexInput"
                       Keyboard="Default"/>

            </VerticalStackLayout>

            <VerticalStackLayout
                x:Name="VSL2">
                
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
